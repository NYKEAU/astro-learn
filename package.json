{
  "name": "astro-learn",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:mobile": "next dev -H 0.0.0.0",
    "build": "next build",
    "build:safe": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" next build",
    "build:windows": ".\\scripts\\build-windows.bat",
    "build:unix": "bash scripts/build-clean.sh",
    "build:clean": "taskkill /f /im node.exe 2>nul & npm run build",
    "build:firebase": "cross-env NODE_ENV=production NEXT_PUBLIC_BUILD_ENV=production next build",
    "deploy": "npm run build:firebase && firebase deploy",
    "deploy:preview": "npm run build:firebase && firebase hosting:channel:deploy preview",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "export-firestore": "node scripts/export-firestore.js",
    "migrate": "node scripts/migrate-firestore.js",
    "migrate:dry-run": "node scripts/migrate-firestore.js --dry-run",
    "migrate:verbose": "node scripts/migrate-firestore.js --verbose",
    "migrate:modules": "node scripts/migrate-firestore.js --modules-only",
    "migrate:users": "node scripts/migrate-firestore.js --step=users",
    "migrate:progress": "node scripts/migrate-firestore.js --step=progress",
    "migrate:cleanup": "node scripts/migrate-firestore.js --step=cleanup",
    "generate-lessons": "node scripts/generate-lessons.js"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.2.5",
    "@react-three/drei": "^10.0.5",
    "@react-three/fiber": "^9.1.0",
    "@types/three": "^0.176.0",
    "chart.js": "^4.4.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^11.3.1",
    "firebase-admin": "^13.2.0",
    "framer-motion": "^12.4.10",
    "hls.js": "^1.6.2",
    "lucide-react": "^0.475.0",
    "next": "^15.3.1",
    "openai": "^4.90.0",
    "path": "^0.12.7",
    "prop-types": "^15.8.1",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-icons": "^5.4.0",
    "sonner": "^1.7.4",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.175.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@firebase/rules-unit-testing": "^4.0.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "22.13.4",
    "@types/react": "19.0.8",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "5.8.3"
  }
}
